<div class="uk-section">
  <div class="uk-child-width-expand@s" uk-grid>
    <div class="uk-grid-item-match uk-width-1-3">
      <div class="uk-card uk-card-default uk-card-body">
        <img src="{{this.beer_logo}}" alt="Brewery Picture"/>
      </div>
    </div>
    <div>
      <h3>{{this.beer_name}}</h3>
      <ul class="uk-list">
        <li>
          Brewery: <a class="breweryClick" href="/brewery/{{this.brewery_name}}">{{this.brewery_name}}</a>
        </li>

        <li>
          Style: {{this.beer_style}}
        </li>

        <li>
          Description: {{this.beer_description}}
        </li>
      </ul>

    </div>
  </div>
</div>

<div>
  <h3 class="uk-heading-line">{{this.beer_name}}'s Stats</h3>
    <p class="alcohol-stats">
      ABV: {{this.beer_abv}} | IBU: {{this.beer_ibu}}
    </p>
</div>
