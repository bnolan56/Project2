<div class="uk-section">
  <div class="uk-child-width-expand@s" uk-grid>
    <div class="uk-grid-item-match uk-width-1-3">
      <div class="uk-card uk-card-default uk-card-body">
         {{#each beerData}}
        <img src="{{this.brewery_pic}}" alt="Brewery Picture"/>
        {{/each}}
      </div>
    </div>
    <div>
      {{#each beerData}}
      <h3>{{this.brewery_name}}</h3>
      {{/each}}
      <ul class="uk-list">
        {{#each beerData}}
        <li>
          Brewery Type: {{this.brewery_type}}
        </li>

        <li>
          Website: <a href="{{this.brewery_website}}" target="_blank">{{this.brewery_website}}</a>
        </li>

        <li>
          Address: {{this.brewery_city}}, {{this.brewery_state}}
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div>
  {{#each beerData}}
  <h3 class="uk-heading-line">{{this.brewery_name}}'s Beers</h3>
 {{/each}}

  <ul class="uk-grid-small uk-child-width-1-2 uk-child-width-1-4@s uk-text-center" uk-sortable="handle: .uk-card" uk-grid>
    {{#each beerName}}
      <li>
          <div class="uk-card uk-card-default uk-card-body"><a href="/beer/{{this.id}}">{{this.beer_name}}</a><br>{{this.beer_style}}<br><img src="{{this.beer_logo}}" alt=""></div>
      </li>
    {{/each}}
   
  </ul>
</div>
