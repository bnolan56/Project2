<div class="uk-section">
  <div class="uk-child-width-expand@s" uk-grid>
    <div class="uk-grid-item-match uk-width-1-3">
      <div class="uk-card uk-card-default uk-card-body">
        <img src="{{this.brewery_pic}}" alt="Brewery Picture"/>
      </div>
    </div>
    <div>
      <h3>{{this.brewery_name}}</h3>
      <ul class="uk-list">
        <li>
          Brewery Type: {{this.brewery_type}}
        </li>

        <li>
          Website: <a href="{{this.brewery_website}}" target="_blank">{{this.brewery_website}}</a>
        </li>

        <li>
          Address: {{this.brewery_city}}, {{this.brewery_state}}
        </li>
      </ul>
    </div>
  </div>
</div>

<div>
  <h3 class="uk-heading-line">{{this.brewery_name}}'s Beers</h3>

  <ul class="uk-grid-small uk-child-width-1-2 uk-child-width-1-4@s uk-text-center" uk-sortable="handle: .uk-card" uk-grid>
    {{#each beerName}}
      <li>
          <div class="uk-card uk-card-default uk-card-body">{{this.beer_name}}</div>
      </li>
    {{/each}}
    <li>
        <div class="uk-card uk-card-default uk-card-body">Item 2</div>
    </li>
    <li>
        <div class="uk-card uk-card-default uk-card-body">Item 3</div>
    </li>
    <li>
        <div class="uk-card uk-card-default uk-card-body">Item 4</div>
    </li>
    <li>
        <div class="uk-card uk-card-default uk-card-body">Item 5</div>
    </li>
    <li>
        <div class="uk-card uk-card-default uk-card-body">Item 6</div>
    </li>
    <li>
        <div class="uk-card uk-card-default uk-card-body">Item 7</div>
    </li>
    <li>
        <div class="uk-card uk-card-default uk-card-body">Item 8</div>
    </li>
  </ul>
</div>
